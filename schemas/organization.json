{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/organization#",
	"table": "organizations",
	"title": "Organizacia",
	"_security": {
		"_create": {
			"_static": [
				"Registry - write"
			]
		},
		"_read": {
			"_static": [
				"Registry - read"
			]
		},
		"_modify": {
			"_static": [
				"Registry - write"
			]
		}
	},
	"listFields": [
		{
			"field": "baseData.name",
			"title": "Názov organizácie"
		}
	],
	"properties": {
		"baseData": {
			"title": "Základné údaje",
			"type": "object",
			"properties": {
				"name": {
					"title": "Názov organizácie",
					"xxtransCode": "schema.org.name",
					"type": "string",
					"required": true,
					"collate":true
				},
				"id": {
					"title": "Organizačné číslo",
					"xxtransCode": "schema.org.id",
					"type": "string",
					"required": false
				},
				"birthDate": {
					"title": "Dátum vzniku ZO",
					"xxtransCode": "schema.org.birthDate",
					"type": "string",
					"required": false
				}
			}
		},
		"address": {
			"title": "Adresa",
			"type": "object",
			"properties": {
				"street": {
					"title": "Ulica",
					"xxtransCode": "schema.org.street",
					"type": "string",
					"required": true
				},
				"houseNumber": {
					"title": "Číslo domu",
					"xxtransCode": "schema.org.houseNumber",
					"type": "string",
					"required": true
				},
				"city": {
					"$ref": "uri://registries/towns#town"
				},
				"zipCode": {
					"title": "PSČ",
					"xxtransCode": "schema.org.zipCode",
					"type": "string",
					"required": true
				},
				"country": {
					"$ref": "uri://registries/nationality#country"
				}
			}
		},
		"invoicingContacts": {
			"title": "Fakturačné údaje",
			"type": "object",
			"properties": {
				"ico": {
					"title": "IČO",
					"xxtransCode": "schema.org.ico",
					"type": "string",
					"required": true
				},
				"dic": {
					"title": "DIČ",
					"xxtransCode": "schema.org.dic",
					"type": "string",
					"required": false
				},
				"icdph": {
					"title": "IČ DPH",
					"xxtransCode": "schema.org.icDph",
					"type": "string",
					"required": false
				},
				"street": {
					"title": "Ulica",
					"xxtransCode": "schema.org.street",
					"type": "string",
					"required": true
				},
				"houseNumber": {
					"title": "Číslo domu",
					"xxtransCode": "schema.org.houseNumber",
					"type": "string",
					"required": true
				},
				"city": {
					"$ref": "uri://registries/towns#town"
				},
				"zipCode": {
					"title": "PSČ",
					"xxtransCode": "schema.org.zipCode",
					"type": "string",
					"required": true
				},
				"country": {
					"$ref": "uri://registries/nationality#country"
				}
			}
		},
		"bankInfo": {
			"title": "Bankové spojenie",
			"type": "object",
			"properties": {
				"accountNumber": {
					"title": "Číslo účtu",
					"xxtransCode": "schema.org.accountNumber",
					"type": "string",
					"required": false
				},
				"bankCode": {
					"title": "Kód banky",
					"xxtransCode": "schema.org.bankCode",
					"type": "string",
					"required": false
				}
			}
		},
		"contactInfo": {
			"title": "Kontaktné údaje",
			"type": "object",
			"properties": {
