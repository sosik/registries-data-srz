{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/people#person",
    "table": "people",
    "title": "person",
    "_security": {
        "_create": {
            "_static": [
                "Registry - write"
            ]
        },
        "_read": {
            "_static": [
                "Registry - read"
            ]
        },
        "_modify": {
            "_static": [
                "Registry - write"
            ]
        }
    },
    "listFields": [
        {
            "field": "baseData.surName",
            "title": "Priezvisko"
        },
        {
            "field": "baseData.name",
            "title": "Meno"
        },
        {
            "field": "baseData.id",
            "title": "Registračné číslo"
        }
    ],
    "properties": {
        "systemCredentials": {
            "$ref": "uri://registries/security#systemCredentials"
        },
        "baseData": {
            "title": "Základné údaje",
            "transCode": "schema.people.baseData",
            "type": "object",
            "properties": {
                "bornNumber": {
                    "title": "Rodné číslo",
                    "xxtransCode": "schema.people.baseData.bornNumber",
                    "type": "string",
                    "required": true
                },
                "name": {
                    "title": "Meno",
                    "transCode": "schema.people.baseData.name",
                    "type": "string",
                    "required": true
                },
                "surName": {
                    "title": "Priezvisko",
                    "transCode": "schema.people.baseData.surName",
                    "type": "string",
                    "required": true
                },
                "bornName": {
                    "title": "Rodné priezvisko",
                    "transCode": "schema.people.baseData.bornName",
                    "type": "string",
                    "required": false
                },
                "title": {
                    "title": "Titul",
                    "type": "string",
                    "required": false
                },
                "birthDate": {
                    "title": "Dátum narodenia",
                    "type": "date",
                    "required": true,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "gender": {
                    "title": "Pohlavie",
                    "type": " string",
                    "enum": [
                        "Muž",
                        "Žena"
                    ],
                    "required": true
                },
                "nationality": {
                    "title": "Štatna prislusnosť",
                    "type": "string",
                    "required": true
                }
            }
        },
        "photoInfo": {
            "title": "Fotografie",
            "type": "object",
            "properties": {
                "photo": {
                    "title": "Fotografia",
                    "type": "string",
                    "required": true,
                    "render": {
                        "component": "psui-uploadable-image",
                        "height": 244,
                        "width": 205
                    }
                }
            }
        },
        "contactInfo": {
            "title": "Kontaktné údaje",
            "type": "object",
            "properties": {
                "street": {
                    "title": "Ulica",
                    "type": "string",
                    "required": true
                },
                "houseNumber": {
                    "title": "Číslo domu",
                    "type": "string",
                    "required": true
                },
                "city": {
                    "title": "Obec",
                    "type": "string",
                    "required": true
                },
                "zipCode": {
                    "title": "PSČ",
                    "type": "string",
                    "required": true
                },
                "country": {
                    "title": "Štát",
                    "type": "string",
                    "required": true
                },
                "phoneNumber": {
                    "title": "Telefón",
                    "type": "string",
                    "required": false
                },
                "mobileNumber": {
                    "title": "Mobil",
                    "type": "string",
                    "required": false
                },
                "email": {
                    "title": "E-mail",
                    "type": "string",
                    "required": false
                }
            }
        },
        "bankInfo": {
            "title": "Bankové spojenie",
            "type": "object",
            "properties": {
                "bankAccount": {
                    "title": "Číslo účtu",
                    "type": "string",
                    "required": false
                },
                "bankCode": {
                    "title": "Kód banky",
                    "type": "string",
                    "required": false
                },
                "iban": {
                    "title": "IBAN",
                    "type": "string",
                    "required": false
                },
                "swift": {
                    "title": "SWIFT",
                    "type": "string",
                    "required": false
                }
            }
        },
        "hockeyPlayerInfo": {
            "title": "Profil hráča",
            "type": "object",
            "properties": {
                "clubName": {
                    "title": "Názov klubu",
                    "required": false,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "baseData.name"
                    }
                },
                "positionName": {
                    "title": "Post",
                    "type": "string",
                    "required": false
                },
                "dressNumber": {
                    "title": "Číslo dresu",
                    "type": "string",
                    "required": false
                },
                "playerHeight": {
                    "title": "Výška",
                    "type": "string",
                    "required": false
                },
                "playerWeight": {
                    "title": "Hmotnosť",
                    "type": "string",
                    "required": false
                },
                "stickHandling": {
                    "title": "Držanie hokejky",
                    "type": "string",
                    "required": false
                },
                "contractDate": {
                    "title": "Zmluva zo dňa",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                }
            }
        },
        "unionMemberEmployerInfo": {
            "title": "Údaje zamestnávateľa",
            "type": "object",
            "properties": {
                "employeeNumber": {
                    "title": "Osobné číslo",
                    "type": "string",
                    "required": false
                },
                "employedFrom": {
                    "title": "V zamestnaní od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "employer": {
                    "title": "Zamestnávateľ",
                    "required": false,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "baseData.name"
                    }
                },
                "departmentName": {
                    "title": "Pracovisko",
                    "type": "string",
                    "required": false
                },
                "occupationName": {
                    "title": "Pracovné zaradenie",
                    "type": "string",
                    "required": false
                }
            }
        },
        "unionMemberUnionsInfo": {
            "title": "Údaje Odborov",
            "type": "object",
            "properties": {
                "primaryOrganizationMembershipFrom": {
                    "title": "Evidov.v ZO od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "unionMembershipFrom": {
                    "title": "V odboroch od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "primaryOrganizationName": {
                    "title": "Základná organizácia",
                    "required": true,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "baseData.name"
                    }
                },
                "unionDepartmentName": {
                    "title": "Výbor",
                    "type": "string",
                    "required": false
                }
            }
        },
        "otherInfo": {
            "title": "Ostatné údaje",
            "type": "object",
            "properties": {
                "isPhotoPublic": {
                    "title": "Je fotka verejná",
                    "type": "boolean",
                    "required": false
                },
                "idCardNumber": {
                    "title": "Číslo OP",
                    "type": "string",
                    "required": false
                },
                "MembershipStartDate": {
                    "title": "Člen od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "MembershipEndDate": {
                    "title": "Člen do",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "note": {
                    "title": "Poznámka",
                    "type": "string",
                    "required": false,
                    "large": true
                }
            }
        }
    }
}